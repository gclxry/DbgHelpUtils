                 Background="Transparent"
                 BorderThickness="0"
                 Text="{x:Bind Path=ThreadContext.ContextFlags, Converter={StaticResource HexConverter}}"
                 FontFamily="Courier New"
                 IsReadOnly="True"
                 TextWrapping="Wrap" />
